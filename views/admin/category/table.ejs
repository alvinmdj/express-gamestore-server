<table id="example2" class="table table-bordered table-hover">
  <thead>
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i < categories.length; i++) { %>
      <tr>
        <td><%= i + 1 %></td>
        <td><%= categories[i].name %></td>
        <td>
          <div>
            <a href="/category/edit/<%= categories[i]._id %>" class="btn btn-warning btn-sm rounded-pill">
              <i class="fas fa-pencil-alt"></i>
              &nbsp;
              Edit
            </a>
            <button type="button" class="btn btn-danger btn-sm rounded-pill" data-toggle="modal" data-target="#modal-danger-<%= categories[i]._id %>">
              <i class="fas fa-trash"></i>
              &nbsp;
              Delete
            </button>
          </div>
        </td>
      </tr>
    <% } %>
  </tbody>
  <tfoot>
  <tr>
    <th>No.</th>
    <th>Name</th>
    <th>Actions</th>
  </tr>
  </tfoot>
</table>

<!-- Delete Confirmation Modal -->
<% for(let i = 0; i < categories.length; i++) { %>
<div class="modal fade" id="modal-danger-<%= categories[i]._id %>">
  <div class="modal-dialog">
    <div class="modal-content bg-danger">
      <div class="modal-header">
        <h4 class="modal-title">Delete Confirmation</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <span>Are you sure to delete category "<%= categories[i].name %>"?</span>
      </div>
      <div class="modal-footer justify-content-between">
        <form action="/category/delete/<%= categories[i]._id %>?_method=DELETE" method="POST">
          <button type="button" class="btn btn-outline-light" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-outline-light">Yes, delete this category!</button>
        </form>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->
<% } %>