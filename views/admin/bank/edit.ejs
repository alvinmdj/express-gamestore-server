<%- include ../../partials/header.ejs %>
<%- include ../../partials/navbar.ejs %>
<%- include ../../partials/sidebar.ejs %>

<% const banks = ['BCA', 'BNI', 'BRI', 'Mandiri', 'Jago'] %>

<div class="content-wrapper">
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Bank</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/bank">Bank</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
      </div>
    </div>
  </section>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Edit Bank - <%= bank.name %></h3>
            </div>
            <form action="/bank/edit/<%= bank._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="name">Customer Name</label>
                  <input type="text" value="<%= bank.name %>" class="form-control" name="name" id="name" placeholder="Enter Customer Name">
                </div>
                <div class="form-group">
                  <label>Bank Name</label>
                  <select class="form-control select2" style="width: 100%;" name="bankName">
                    <option selected="selected" value="">Choose a Bank</option>
                    <% banks.forEach((b) => { %>
                      <option value="<%= b %>"
                        <% if (b === bank.bankName) { %>
                          selected
                        <% } %>
                      >
                        <%= b %>
                      </option>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="accountNumber">Account Number</label>
                  <input type="number" value="<%= bank.accountNumber %>" class="form-control" name="accountNumber" id="accountNumber" placeholder="Enter Account Number">
                </div>
              </div>
              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Update Bank</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include ../../partials/footer.ejs %>
<%- include ../../partials/js.ejs %>